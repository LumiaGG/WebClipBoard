<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_web"
        android:layout_width="377dp"
        android:layout_height="110dp"
        android:layout_marginBottom="120dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="5dp"
        app:cardElevation="23dp"
        app:layout_constraintBottom_toBottomOf="@id/cardView_loacl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textview_web"
            android:layout_width="265dp"
            android:layout_height="78dp"
            android:layout_gravity="left|top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="17dp"
            android:clickable="true"
            android:maxLines="4"
            android:ellipsize="end"
            android:textColor="#ffffff"></TextView>

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imageView_web"
            android:layout_width="73dp"
            android:layout_height="90dp"
            android:layout_gravity="right|center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            app:round="5dp"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_loacl"
        android:layout_width="377dp"
        android:layout_height="110dp"
        android:layout_marginBottom="120dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="5dp"
        app:cardElevation="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textview_local"
            android:layout_width="265dp"
            android:layout_height="78dp"
            android:layout_gravity="left|top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="17dp"
            android:clickable="true"
            android:maxLines="4"
            android:ellipsize="end"
            android:textColor="#ffffff" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imageView_local"
            android:layout_width="73dp"
            android:layout_height="90dp"
            android:layout_gravity="right|center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            app:round="5dp"
            android:src="@drawable/icon"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/maskView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>